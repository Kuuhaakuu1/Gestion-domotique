<Window x:Class="Gestion_Domotique.MainWindow" 
        AllowDrop="True" Background="White"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestion_Domotique"
        mc:Ignorable="d"
        Title="MainWindow" Height="539" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="144*"/>
        </Grid.RowDefinitions>
        <Canvas AllowDrop="True" Background="Black" Drop="Canvas_Drop" x:Name="canvas" ClipToBounds="True" Grid.RowSpan="2" Height="377" VerticalAlignment="Top">

            <Rectangle 
                x:Name="RedRectangle"
                MouseMove="RedRectangle_MouseMove"
                Canvas.Left="50"
                Canvas.Top="50"
                Width="50"
                Height="50"
                Fill="Red"
                />
            
        </Canvas>

    </Grid>
</Window>
